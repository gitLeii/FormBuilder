@model FormBuilder.Models.FormElement
@{
    ViewData["Title"] = "FormField";
}

<h1>Form Fields</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FormField">
            <input type="hidden" asp-for="FormDataId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ElementLabel" class="control-label"></label>
                <input asp-for="ElementLabel" class="form-control" />
                <span asp-validation-for="ElementLabel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementType" class="control-label"></label>
                <input asp-for="ElementType" id="elementType" class="form-control" />
                <span asp-validation-for="ElementType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElementValue" class="control-label"></label>
                <input asp-for="ElementValue" class="form-control" />
                <span asp-validation-for="ElementValue" class="text-danger"></span>
            </div>
            <br />
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="col-md-6 form-group" id="keyDiv" >
                        <label>Key</label>
                        <input id="valid" name="ValidationKey" type="text" value="" required class="form-control v" />
                        <label>Value</label>
                        <input id="valid1" name="ValidationValue" type="text" value="" required class="form-control v" />
                        <label>Message</label>
                        <input id="valid2" name="ValidationMessage" type="text" value="" required class="form-control v" />
                        <br />
                    </div>  
                    <br />
                        <button type="button" class="btn btn-secondary my-3" id="toggle">Add Validation</button>
                        <br />
                    <div class="form-group col-md-4">
                        <input type="submit" value="Add"  class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>            
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
     <script>  
        $('#keyDiv').hide();

        $('#toggle').click(function(){
            $('#keyDiv').toggle();
        })

  
     </script>
}
