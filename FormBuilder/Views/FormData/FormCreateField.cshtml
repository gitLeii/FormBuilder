@model IEnumerable<FormBuilder.Models.FormElement>
@{
    ViewData["Title"] = "Form Elements";
    int? id = ViewBag.Id;
    string? name = ViewBag.FormName;
}

<h2>Form Fields</h2>
<a asp-action="FormField" asp-route-id="@id" class="btn-light btn-sm btn">Add more fields.</a>
<br />
<br />
<div class="row">
    <div class="col-md-8">
        <form asp-action="FormCreateField">
            <fieldset class="border p-2">
            <legend class="w-auto">@name</legend>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach (var item in Model)
            {
                    if( @item.ElementType != "radio" && @item.ElementType != "checkbox")
                    {
                        <div class="row">
                            <div  class="col-md-5">
                                <div class="form-group">
                                <label asp-for="@item.ElementLabel" class="control-label">@item.ElementLabel</label>
                                <br />
                                <input type="@item.ElementValue" placeholder="@item.ElementValue" name="ElementValue" class="form-control" />
                                <br />
                                <span asp-validation-for="@item.ElementLabel" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    }
                    else if(@item.ElementType == "radio" || @item.ElementType == "checkbox")
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                <label asp-for="@item.ElementLabel" class="control-label">@item.ElementLabel</label>
                                <br />
                                <div class="form-check">
                                  <input class="form-check-input" type="@item.ElementType" name="ElementValue" id="flexCheckDefault">
                                  <label class="form-check-label" for="flexCheckDefault">
                                    @item.ElementValue
                                  </label>
                                </div>
                                <span asp-validation-for="@item.ElementLabel" class="text-danger"></span>
                                </div> 
                            </div>
                        </div>                        
                    }                
            }
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-sm btn-primary" />
            </div>
            </fieldset>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
